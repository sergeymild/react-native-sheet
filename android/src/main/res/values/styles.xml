<resources xmlns:tools="http://schemas.android.com/tools">


  <style name="BottomSheet.Theme" parent="Theme.MaterialComponents.Light.NoActionBar"/>

  <style name="AppBottomSheetDialog" parent="Theme.AppCompat.Dialog">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    <item name="bottomSheetStyle">@style/AppBottomSheetModalBehavior</item>
    <item name="android:windowIsFloating">false</item>
    <item name="statusBarBackground">@android:color/transparent</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowSoftInputMode">adjustNothing</item>
  </style>

  <style name="AppBottomSheetDialog.Dark">
    <item name="android:navigationBarColor">@android:color/black</item>
  </style>

  <style name="AppBottomSheetModalBehavior" parent="android:Widget">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:elevation" tools:ignore="NewApi">16dp</item>
    <item name="behavior_hideable">true</item>
    <item name="behavior_skipCollapsed">true</item>
  </style>

  <style name="Theme.FullScreenDialog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
  </style>

  <style name="Theme.EdgeToEdgeDialog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowSoftInputMode">adjustNothing</item>
  </style>


  <style name="Theme.FullScreenDialog.Slide">
    <item name="android:windowEnterAnimation">@anim/slide_up</item>
    <item name="android:windowExitAnimation">@anim/slide_down</item>
  </style>

  <style name="Theme.FullScreenDialog.Fade">
    <item name="android:windowEnterAnimation">@anim/fade_in</item>
    <item name="android:windowExitAnimation">@anim/fade_out</item>
  </style>

  <style name="Theme.FullScreenDialog.NoAnimation">
    <item name="android:windowEnterAnimation">@null</item>
    <item name="android:windowExitAnimation">@null</item>
  </style>
</resources>
